{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env.local"],
  "globalEnv": [
    "NODE_ENV",
    "STRIPE_SECRET_KEY",
    "STRIPE_DEVELOPER_PRICE_ID",
    "STRIPE_STARTUP_PRICE_ID",
    "SUPABASE_SERVICE_KEY",
    "JOHN_DEERE_CLIENT_ID",
    "JOHN_DEERE_CLIENT_SECRET",
    "JOHN_DEERE_REDIRECT_URI",
    "STRIPE_WEBHOOK_SECRET",
    "GATEWAY_INTERNAL_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["//#copy-types", "^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.local",
        ".env.production.local",
        ".env"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_DEVELOPER_PRICE_ID",
        "STRIPE_STARTUP_PRICE_ID",
        "JOHN_DEERE_CLIENT_ID",
        "JOHN_DEERE_CLIENT_SECRET",
        "JOHN_DEERE_REDIRECT_URI",
        "NEXT_PUBLIC_GATEWAY_URL",
        "GATEWAY_INTERNAL_SECRET"
      ]
    },
    "check": {
      "dependsOn": ["//#copy-types", "^check"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "$TURBO_ROOT$/tsconfig.json"
      ],
      "outputs": []
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "biome.json"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#copy-types": {
      "inputs": ["packages/types/src/**/*.ts", "scripts/copy-types.js"],
      "outputs": ["packages/supabase/supabase/functions/_shared/types/**"],
      "cache": true
    }
  }
}
